{
    "modules": {
        "interaction": {
            "type": "MeshInteraction",
            "slots": {
                "window": "window"
            }
        },
        "window": {
            "type": "EncyclopediaWindow",
            "slots": {
                "lightbox": {
                    "type": "LightboxModule",
                    "slots": {
                        "card-type": {
                            "type": "MediaCard"
                        }
                    }
                },
                "home-page": "home-page",
                "search-page": "search-page",
                "article-page": "article-page"
            }
        },
        "home-page": {
            "type": "TwoPieceTemplate",
            "properties": {
                "orientation": "vertical",
                "valign": "center"
            },
            "slots": {
                "first": {
                    "type": "AppBanner",
                    "properties": {
                        "min-fraction": 0.5,
                        "max-fraction": 0.5,
                        "margin-bottom": 42
                    }
                },
                "second": {
                    "type": "SearchBox",
                    "properties": {
                        "halign": "center"
                    }
                }
            }
        },
        "search-page": {
            "type": "DividedBannerTemplate",
            "slots": {
                "top-left": {
                    "type": "AppBanner",
                    "properties": {
                        "min-fraction": 0.2,
                        "max-fraction": 0.2,
                        "margin-top": 10,
                        "margin-bottom": 10,
                        "valign": "start",
                        "vexpand": false,
                        "halign": "center"
                    }
                },
                "top-right": {
                    "type": "SearchBox",
                    "properties": {
                        "halign": "center",
                        "valign": "center",
                        "hexpand": true
                    }
                },
                "bottom": {
                    "type": "PaperTemplate",
                    "slots": {
                        "content": {
                            "type": "BannerTemplate",
                            "properties": {
                                "margin-start": 45,
                                "margin-end": 45
                            },
                            "slots": {
                                "banner": {
                                    "type": "SearchBannerModule",
                                    "properties": {
                                        "halign": "start"
                                    }
                                },
                                "content": {
                                    "type": "SearchModule",
                                    "properties": {
                                        "margin-top": 20,
                                        "message-halign": "start",
                                        "halign": "fill",
                                        "max-children": 10
                                    },
                                    "slots": {
                                        "arrangement": {
                                            "type": "ScrollingListArrangement",
                                            "properties": {
                                                "hexpand": true,
                                                "halign": "fill"
                                            },
                                            "slots": {
                                                "card-type": {
                                                    "type": "TextCard",
                                                    "properties": {
                                                        "underline-on-hover": true
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "article-page": {
            "type": "DividedBannerTemplate",
            "slots": {
                "top-left": {
                    "type": "AppBanner",
                    "properties": {
                        "min-fraction": 0.2,
                        "max-fraction": 0.2,
                        "margin-top": 10,
                        "margin-bottom": 10,
                        "valign": "start",
                        "vexpand": false,
                        "halign": "center"
                    }
                },
                "top-right": {
                    "type": "SearchBox",
                    "properties": {
                        "halign": "center",
                        "valign": "center",
                        "hexpand": true
                    }
                },
                "bottom": {
                    "type": "PaperTemplate",
                    "slots": {
                        "content": {
                            "type": "ArticleStackModule",
                            "properties": {
                                "do-sliding-animation": false
                            },
                            "slots": {
                                "card-type": {
                                    "type": "KnowledgeDocumentCard"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
