{
  "version": 2,
  "root": {
    "type": "Controller.Mesh",
    "slots": {
      "window": {
        "type": "Window.App",
        "slots": {
          "article-page": {
            "type": "Layout.ArticleStack",
            "properties": {
              "allow-navigation": "next"
            },
            "slots": {
              "card-type": {
                "type": "Card.FakeVideoDocument"
              },
              "nav-card-type": {
                "type": "Card.Title"
              }
            }
          },
          "home-page": {
            "type": "Layout.Scrolling",
            "id": "home-scroll",
            "slots": {
              "content": {
                "type": "Layout.Banner",
                "slots": {
                  "banner": {
                    "type": "Banner.App",
                    "properties": {
                      "halign": "fill",
                      "image-uri": "resource:///com/endlessm/video-test-en/assets/titleImage.svg",
                      "max-fraction": 0.5,
                      "valign": "start"
                    }
                  },
                  "content": {
                    "type": "ContentGroup.Item",
                    "properties": {
                      "hexpand": true
                    },
                    "slots": {
                      "arrangement": {
                        "type": "Arrangement.List",
                        "slots": {
                          "card-type": {
                            "type": "Card.List"
                          }
                        },
                        "references": {
                          "scroll-server": "home-scroll"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "navigation": {
            "type": "Layout.Navigation"
          },
          "search": {
            "type": "Navigation.SearchBox"
          },
          "search-page": {
            "type": "Layout.Scrolling",
            "id": "search-scroll",
            "slots": {
              "content": {
                "type": "Layout.Banner",
                "slots": {
                  "banner": {
                    "type": "Banner.Search",
                    "properties": {
                      "halign": "fill"
                    }
                  },
                  "content": {
                    "type": "ContentGroup.Search",
                    "properties": {
                      "message-halign": "center",
                      "message-justify": "left"
                    },
                    "slots": {
                      "arrangement": {
                        "type": "Arrangement.List",
                        "slots": {
                          "card-type": {
                            "type": "Card.List"
                          }
                        },
                        "references": {
                          "scroll-server": "search-scroll"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
